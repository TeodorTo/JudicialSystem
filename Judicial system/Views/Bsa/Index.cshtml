@model Judicial_system.Models.BsaModel

<h2>Калкулатор на BSA (Mosteller формула)</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Ръст (см):</label>
        <input asp-for="HeightCm" class="form-control" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>
    <div>
        <label>Тегло (кг):</label>
        <input asp-for="WeightKg" class="form-control" />
        <span asp-validation-for="WeightKg" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Пресметни BSA</button>
</form>

@if (Model.BsaResult.HasValue)
{
    <div class="alert alert-success mt-3">
        <strong>Резултат:</strong> BSA ≈ @Model.BsaResult.Value м²
        <button type="button" class="btn btn-link p-0 ms-2" onclick="document.getElementById('fullResult').style.display='inline'; this.style.display='none';">
            Покажи целия резултат
        </button>
        <span id="fullResult" style="display:none;">(@Model.BsaFullResult м²)</span>
    </div>
}