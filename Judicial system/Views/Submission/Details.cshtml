@model Judicial_system.Data.Submission

@{
    ViewData["Title"] = "Submission Result";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">Резултат от изпратеното решение</h2>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-bold">Тип на задачата:</dt>
                        <dd class="col-sm-8">@Model.Task.Type</dd>

                        <dt class="col-sm-4 fw-bold">Дата:</dt>
                        <dd class="col-sm-8">@Model.SubmissionDate.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-4 fw-bold">Оценка:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Model.Score%</span>
                        </dd>
                    </dl>

                    <h3 class="h5 mb-3">Вашият код:</h3>
                    <pre class="border rounded p-3 bg-light">@Model.SourceCode</pre>

                    <div class="mt-4">
                        <a asp-action="Details" asp-controller="Task" asp-route-id="@Model.TaskId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Обратно към задачата
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>